###################### BUILDER ######################
FROM julia:latest

SHELL ["/bin/bash", "-c"]

ARG lang="C"
ARG dir="src"

WORKDIR /root/${dir}

ENV DEBIAN_FRONTEND noninter active
ENV TERM xterm
ENV DISPLAY host.docker.internal:0.0
ENV LANG ${lang}
ENV LANGUAGE ${lang}
ENV LC_ALL ${lang}
ENV TZ=Asia/Tokyo
ENV TZ JST-9

RUN export JULIA_NUM_THREADS=4

COPY *.jl /root/${dir}/
